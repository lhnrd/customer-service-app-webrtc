{
  "extends": ["airbnb", "prettier"],
  "env": {
    "browser": true,
    "jest": true,
    "es6": true
  },
  "plugins": ["prettier"],
  "rules": {
    "prettier/prettier": "error",
    "react/jsx-filename-extension": 0,
    "import/no-extraneous-dependencies": [
      "error",
      {
        "devDependencies": [
          "**/*.spec.js",
          "**/__tests__/**/*",
          "**/setupTests.js"
        ]
      }
    ],
    "no-param-reassign": [
      "error",
      {
        "ignorePropertyModificationsFor": ["draft"]
      }
    ],
    "default-case": "off"
  },
  "settings": {
    "import/resolver": {
      "babel-module": {
        "alias": {
          "src": "./src"
        }
      }
    }
  }
}
